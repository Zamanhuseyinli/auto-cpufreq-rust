<!-- Canvas -->
<canvas id="bgCanvas"></canvas>

<!-- Cybernetic cursor -->
<div class="cursor" id="cursor"></div>

<script>
// Navbar toggle
const navbar=document.getElementById('navbar');
const navToggle=document.getElementById('navToggle');
navToggle.addEventListener('click',()=>navbar.classList.toggle('active'));

// Canvas setup
const canvas=document.getElementById('bgCanvas');
const ctx=canvas.getContext('2d');
let w=canvas.width=window.innerWidth;
let h=canvas.height=window.innerHeight;

// Particle class
class Particle{
  constructor(x,y,target=false,isIcon=false){
    this.x=x||Math.random()*w;
    this.y=y||Math.random()*h;
    this.baseX=this.x; this.baseY=this.y;
    this.vx=(Math.random()-0.5)*0.3;
    this.vy=(Math.random()-0.5)*0.3;
    this.radius=2;
    this.target=target;
    this.alpha=Math.random()*0.5+0.5;
    this.isIcon=isIcon;
  }
  update(){
    if(this.target){
      this.x+=(this.baseX-this.x)*0.08+(Math.random()-0.5)*0.2;
      this.y+=(this.baseY-this.y)*0.08+(Math.random()-0.5)*0.2;
    } else {
      this.x+=this.vx; this.y+=this.vy;
      if(this.x<0)this.x=w;
      if(this.x>w)this.x=0;
      if(this.y<0)this.y=h;
      if(this.y>h)this.y=0;
    }
  }
  draw(){
    ctx.beginPath();
    ctx.arc(this.x,this.y,this.radius,0,Math.PI*2);
    if(this.isIcon){
      ctx.fillStyle=`rgba(255,255,0,${this.alpha})`;
      ctx.shadowColor='#ffff66';
      ctx.shadowBlur=8;
    } else {
      ctx.fillStyle=`rgba(0,200,255,${this.alpha})`;
      ctx.shadowColor='#00c8ff';
      ctx.shadowBlur=5;
    }
    ctx.fill();
  }
}

// Particle arrays
const particles=[]; 
let textParticles=[];

// Determine if mobile
const isMobile = /Mobi|Android/i.test(navigator.userAgent);

// Spawn text particles
function spawnTextParticles(){
  textParticles.forEach(p=>particles.splice(particles.indexOf(p),1));
  textParticles=[];
  const offCanvas=document.createElement('canvas');
  offCanvas.width=w; offCanvas.height=h;
  const offCtx=offCanvas.getContext('2d');

  // Mobilde font boyutunu küçült
  offCtx.font = isMobile ? '60px Orbitron' : '120px Orbitron';
  offCtx.fillStyle='white';
  offCtx.textAlign='center';
  offCtx.textBaseline='middle';
  offCtx.fillText('Azccriminal', w/2, h/2);

  const data=offCtx.getImageData(0,0,w,h).data;
  const step = isMobile ? 6 : 8; // mobilde particle daha yoğun
  for(let y=0;y<h;y+=step){
    for(let x=0;x<w;x+=step){
      const index=(y*w+x)*4;
      if(data[index+3]>128){
        const p=new Particle(x,y,true);
        particles.push(p);
        textParticles.push(p);
      }
    }
  }
}

// Initialize
document.fonts.ready.then(()=>spawnTextParticles());

// Particle spawn based on device
const initialParticles = isMobile ? 70 : 100;
for(let i=0;i<initialParticles;i++) particles.push(new Particle());

// Social icon particles
function spawnIconParticles(){
  const icons=document.querySelectorAll('.social-icons img');
  icons.forEach(icon=>{
    const rect=icon.getBoundingClientRect();
    for(let i=0;i<8;i++){
      const p=new Particle(
        rect.left + rect.width/2 + (Math.random()-0.5)*10,
        rect.top + rect.height/2 + (Math.random()-0.5)*10,
        true,
        true
      );
      particles.push(p);
    }
  });
}
spawnIconParticles();

// Animate
function animate(){
  ctx.clearRect(0,0,w,h);
  particles.forEach(p=>{p.update(); p.draw();});
  requestAnimationFrame(animate);
}
animate();

// Resize
window.addEventListener('resize',()=>{
  w=canvas.width=window.innerWidth;
  h=canvas.height=window.innerHeight;
  spawnTextParticles();
  spawnIconParticles();
});

// Click to explode text particles
canvas.addEventListener('click',()=>{
  textParticles.forEach(p=>{
    p.vx=(Math.random()-0.5)*5;
    p.vy=(Math.random()-0.5)*5;
    p.target=false;
  });
  setTimeout(spawnTextParticles,300);
});

// Cybernetic cursor
const cursor=document.getElementById('cursor');
if(!isMobile){
  document.addEventListener('mousemove',e=>{
    cursor.style.left=`${e.pageX}px`;
    cursor.style.top=`${e.pageY}px`;
  });
  document.addEventListener('mousedown',()=>{cursor.classList.add('active');});
  document.addEventListener('mouseup',()=>{cursor.classList.remove('active');});
}
</script>

</body>
</html>
