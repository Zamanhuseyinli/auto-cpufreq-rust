# auto-cpufreq configuration - Gaming/High Performance
# Optimized for: Gaming, video editing, heavy workloads

[charger]
# Maximum performance when plugged in
governor = performance
turbo = always
energy_performance_preference = performance

[battery]
# Still prioritize performance on battery
governor = performance
turbo = auto
energy_performance_preference = balance_performance

# No battery thresholds - maximize available charge
enable_thresholds = false
